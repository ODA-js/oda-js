    "run-publish": "lerna publish",
    "bootstrap": "lerna bootstrap",
    "test": "jest --verbose"
  },
  "lint-staged": {
    "*.tsx$": [
      "prettier --write",
      "git add"
    ],
    "*.jsx$": [
      "prettier --write",
      "git add"
    ],
    "*.ts$": [
      "prettier --write",
      "git add"
    ],
    "*.js$": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/*"
    ]
  }
