{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "es2017"
    ],
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "rootDir": "src",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "pretty": true,
    "skipLibCheck": true,

  },
  "exclude": [
    "src/**/__tests__/*.ts",
    "node_modules",
    "dist"
  ]
}
