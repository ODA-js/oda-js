{
  "compilerOptions": {
    "target": "es2018",
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": false,
    "pretty": true,
    "removeComments": true,
    "strict": false,
    "skipLibCheck": true,
    "lib": ["es2018", "esnext.asynciterable"],
    "types": ["@types/node"]
  },
  "exclude": ["node_modules", "dist"]
}
