{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": false,
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true,
    "lib": [
      "es2018",
      "esnext.asynciterable"
    ],
    "types": [
      "@types/node"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}